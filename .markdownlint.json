{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,

  "MD003": {
    "style": "atx"
  },

  "MD004": {
    "style": "dash"
  },

  "MD007": {
    "indent": 2,
    "start_indented": false
  },

  "MD009": {
    "br_spaces": 2,
    "list_item_empty_lines": false,
    "strict": true
  },

  "MD010": {
    "code_blocks": true,
    "spaces_per_tab": 2
  },

  "MD012": {
    "maximum": 1
  },

  "MD013": false,

  "MD022": {
    "lines_above": 1,
    "lines_below": 1
  },

  "MD024": {
    "siblings_only": true
  },

  "MD025": {
    "level": 1,
    "front_matter_title": "^\\s*title\\s*[:=]"
  },

  "MD029": {
    "style": "ordered"
  },

  "MD030": {
    "ul_single": 1,
    "ol_single": 1,
    "ul_multi": 1,
    "ol_multi": 1
  },

  "MD033": {
    "allowed_elements": [
      "a",
      "br",
      "code",
      "details",
      "div",
      "em",
      "h1",
      "h2",
      "h3",
      "img",
      "kbd",
      "p",
      "picture",
      "source",
      "span",
      "strong",
      "sub",
      "summary",
      "sup",
      "table",
      "tbody",
      "td",
      "th",
      "thead",
      "tr",
      "example",
      "commentary"
    ]
  },

  "MD035": {
    "style": "---"
  },

  "MD036": {
    "punctuation": ".,;:!?。，；：！？"
  },

  "MD040": true,

  "MD041": false,

  "MD044": false,

  "MD046": {
    "style": "fenced"
  },

  "MD048": {
    "style": "backtick"
  },

  "MD049": {
    "style": "underscore"
  },

  "MD050": {
    "style": "asterisk"
  },

  "MD051": true,

  "MD052": true,

  "MD053": {
    "ignored_definitions": ["//"]
  },

  "MD054": {
    "autolink": true,
    "inline": true,
    "full": true,
    "collapsed": true,
    "shortcut": true,
    "url_inline": true
  },

  "MD055": {
    "style": "leading_and_trailing"
  },

  "MD056": true,

  "MD058": true,

  "MD060": false
}
